openstack_envvars:
  OS_PROJECT_DOMAIN_NAME: Default
  OS_USER_DOMAIN_NAME: Default
  OS_PROJECT_NAME: {{ keystone_admin_project }}
  OS_TENANT_NAME: {{ keystone_admin_project }}
  OS_USERNAME: {{ keystone_admin_user }}
  OS_PASSWORD: {{ keystone_admin_password }}
  OS_AUTH_URL: {{ admin_protocol }}://{{ kolla_internal_fqdn }}:{{ keystone_admin_port }}/v3
  OS_INTERFACE: internal
  OS_IDENTITY_API_VERSION: 3
  OS_REGION_NAME: {{ openstack_region_name }}
  OS_AUTH_PLUGIN: password
  OS_BAREMETAL_API_VERSION: 1.29
  {% if kolla_enable_tls_external | bool and kolla_external_fqdn_cacert %}
  OS_CACERT: {{ kolla_external_fqdn_cacert }}
  {% endif %}
